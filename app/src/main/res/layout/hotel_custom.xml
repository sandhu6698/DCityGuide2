<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >

        <ImageView
            android:id="@+id/timage"
            android:layout_width="40dp"
            android:layout_height="27dp"
            android:src="@drawable/icon_play" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="Ashling Hotel"
            android:textSize="23sp"
            android:id="@+id/hotel_title"
            android:textStyle="bold"
            />
    </LinearLayout>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="243dp"
        android:scaleType="fitStart"
        android:id="@+id/hotel_image"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/text"
        android:id="@+id/hotel_info"
        android:textSize="@dimen/text"
        android:layout_marginTop="10dp"
        tools:text="Ashling Hotel is a four star hotel situated a few minutes walk from the center of Dublin. Nearby are located the National Museum of Ireland, a zoo, numerous shops and restaurants"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="6dp"
        >

        <ImageView
            android:layout_width="40dp"
            android:layout_height="27dp"
            android:src="@drawable/icon_pin"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="Ashling Hotel"
            android:textSize="@dimen/text"
            android:fontFamily="sans-serif"
            android:id="@+id/hotel_address"

            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="6dp"
        >

        <ImageView
            android:layout_width="40dp"
            android:layout_height="27dp"
            android:src="@drawable/call"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="Ashling Hotel"
            android:textColor="@color/text"
            android:textSize="@dimen/text"
            android:fontFamily="sans-serif"
            android:id="@+id/hotel_number"

            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="6dp"
        >

        <ImageView
            android:id="@+id/wimage"
            android:layout_width="40dp"
            android:layout_height="27dp"
            android:src="@drawable/global" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="Ashling Hotel"
            android:textColor="@color/text"
            android:textSize="@dimen/text"
            android:fontFamily="sans-serif"
            android:id="@+id/hotel_website"
            android:layout_marginBottom="10dp"

            />
    </LinearLayout>
</LinearLayout>